{
  "name": "react-node-app",
  "version": "1.0.0",
  "description": "Node server with React client",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "server": "NODE_ENV=development node --watch dist/server.js",
    "client": "cd client && npm run dev",
    "client-install": "cd client && npm install",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run client\"",
    "build": "tsc && cd client && npm run build",
    "watch": "tsc -w"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.18.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22",
    "typescript": "^4.9.5"
  }
}
